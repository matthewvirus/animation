<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageSwitcher
        android:id="@+id/sky_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/sky"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sky"
            android:contentDescription="@string/sky"/>

        <ImageView
            android:id="@+id/night_sky"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/night_sky"
            android:contentDescription="@string/sky"/>

    </ImageSwitcher>

    <ImageSwitcher
        android:id="@+id/grass_switcher"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/grass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/grass"
            android:contentDescription="@string/sky"/>

        <ImageView
            android:id="@+id/night_grass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/night_grass"
            android:contentDescription="@string/sky"/>

    </ImageSwitcher>

    <ImageView
        android:id="@+id/sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:src="@drawable/sun"
        android:contentDescription="@string/sun"/>

    <ImageView
        android:id="@+id/moon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:src="@drawable/moon"
        android:contentDescription="@string/moon"/>


</androidx.constraintlayout.widget.ConstraintLayout>